<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/test_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_text2_height"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/tips_text_size"
        android:text="@string/tip_for_lsensor"
        android:textColor="#ffff0000" />

    <TextView
        android:id="@+id/txt_value_lsensor"
        android:layout_marginTop="@dimen/marginTop_text1_height"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressbar_lsensor"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
